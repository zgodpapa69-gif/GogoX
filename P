<script>
  // Sample data (replace with your legal entries)
  const apks = [
    { id:1, name:"Londiya Gram Pro", desc:"Photo editor - demo entry", icon:"https://i.imgur.com/4Y3w8QG.png", url:"#placeholder" },
    { id:2, name:"FAM V2", desc:"Social client - demo entry", icon:"https://i.imgur.com/hkQw7bZ.png", url:"#placeholder" },
    { id:3, name:"Snap King", desc:"Snap tools - demo entry", icon:"https://i.imgur.com/7kQw3Qf.png", url:"#placeholder" },
    { id:4, name:"ChatX Pro", desc:"Chat tools - demo", icon:"https://i.imgur.com/4Y3w8QG.png", url:"#placeholder" },
    { id:5, name:"MusicWave", desc:"Music player - demo", icon:"https://i.imgur.com/hkQw7bZ.png", url:"#placeholder" }
  ];

  const grid = document.getElementById('grid');

  function render(list){
    grid.innerHTML = '';
    if(list.length===0){
      grid.innerHTML = '<div style="grid-column:1/-1;text-align:center;color:var(--muted);padding:40px 10px">Koi result nahi mila.</div>';
      return;
    }
    list.forEach(a=>{
      const card = document.createElement('div'); card.className='card';
      card.innerHTML = `
        <div class="icon"><img src="${a.icon}" alt="${a.name}"></div>
        <div class="name">${a.name}</div>
        <div class="sub">${a.desc}</div>
        <div class="btns">
          <button class="btn btn-primary" onclick="handleDownload(${a.id})">Download</button>
          <button class="btn btn-disabled" onclick="openDetails(${a.id})">Details</button>
        </div>
      `;
      grid.appendChild(card);
    });
  }

  function handleDownload(id){
    // IMPORTANT: This is a safe placeholder.
    // Replace with Play Store or legal hosted file link only.
    const item = apks.find(x=>x.id===id);
    if(!item) return;
    alert('Download placeholder for: ' + item.name + '\n\nNote: Replace this with a legal Play Store link or your own licensed APK hosting.');
  }

  function openDetails(id){
    const item = apks.find(x=>x.id===id);
    if(!item) return;
    alert(item.name + '\\n\\n' + item.desc + '\\n\\n(Use this page to add screenshots, changelog, legal links.)');
  }

  // Search logic
  const input = document.getElementById('searchInput');
  const searchBtn = document.getElementById('searchBtn');
  const clearBtn = document.getElementById('clearBtn');

  function doSearch(){
    const q = input.value.trim().toLowerCase();
    if(!q){ render(apks); return; }
    const filtered = apks.filter(x => x.name.toLowerCase().includes(q) || x.desc.toLowerCase().includes(q));
    render(filtered);
  }

  input.addEventListener('input', doSearch);
  searchBtn.addEventListener('click', doSearch);
  clearBtn.addEventListener('click', ()=>{ input.value=''; doSearch(); });

  // initial render
  render(apks);
</script>

